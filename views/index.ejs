<html>
	<head>
		<title>One Shop Stop</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->

		<script src="js/jquery.min.js"></script>
		<script src="js/jquery.js"></script>
		<script src="js/jquery.dropotron.min.js"></script>
		<script src="js/skel.min.js"></script>
		<script src="js/skel-layers.min.js"></script>
		<script src="js/init.js"></script>
		<noscript>
			<link rel="stylesheet" href="css/skel.css" />
			<link rel="stylesheet" href="css/style.css" />
			<link rel="stylesheet" href="css/style-desktop.css" />
		</noscript>
		<!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->

	</head>
	<body class="homepage">

		<!-- Header -->
			<div id="header-wrapper">
				<div id="header">

					<!-- Logo -->
						<h1><a href="index.html">One Stop Shop </a></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul>
								<li class="current"><a href="index.html">Home</a></li>
								<li>
									<a href="">Agencies by Name</a>
									<ul>
										<% for (var i = 0; i < agencies.length; i++) { %>
										<% var agency = agencies[i]; %>
										<li><a href="<%= agency.url%>"><%= agency.name %></a></li>
										<% } %>
									</ul>
								</li>
								<li><a href="survey.html">Survey</a></li>
								<li><a href="/admin/admin.html">Admin Login</a></li>
							</ul>
						</nav>

					<!-- Banner -->
						<section id="banner">
							<header>
								<h2>Welcome, this is the One Stop Shop.</h2>
								<p>There are number of State services available to you here.
								If you know which one you are familiar with, feel free to click
								on the image or link provided. Otherwise, please answer the questions below to
								determine your family needs.</p>
							</header>
						</section>

					<!-- Intro -->
						<section id="intro" class="container">
							<div class="row">
								<div class="4u">
									<section class="first">
										<a href="https://secure.in.gov/dhs/" class="image responsive"><img src="images/IDHS.png" alt="" /></a>
										<header>
											<h2>Indiana Department of Homeland Security</h2>
										</header>
									</section>
								</div>
								<div class="4u">
									<section class="middle">
										<a href="www.in.gov" class="image responsive"><img src="images/IndyGov.png" alt="" /></a>
										<header>
											<h2>Indiana Goverment</h2>
										</header>
									</section>
								</div>
								<div class="4u">
									<section class="last">
										<a href="https://secure.in.gov/bmv/" class="image responsive"><img src="images/BMV.png" alt="" /></a>
										<header>
											<h2>Bureau of Motor Vehicles</h2>
										</header>
									</section>
								</div>
							</div>
							<footer>
								<ul class="actions">
									<li><a href="survey.html" class="button big">Survey</a></li>
								</ul>
							</footer>
						</section>
				</div>
			</div>

		<!-- Main -->
			<div id="main-wrapper">
				<div class="container">
					<div class="row">
						<div class="12u">

							<% if (agencies.length) { %>
							<!-- Portfolio -->
								<section>
									<header class="major">
										<h2>All Departments</h2>
									</header>

									<% for (var i = 0; i < agencies.length; i+=3) { %>
									<div class="row">

										<% for (var j = 0; j < 3 && i+j < agencies.length; j++) { %>
										<% var agency = agencies[i+j]; %>
										<div class="4u">
											<section class="box">

												<center>
													<a href="#" class="image responsive">
														<% if ( agency.imageUrl ) { %>
														<img src="<%=agency.imageUrl%>" alt="" />
														<% } else { %>
														<img src="images/flag.svg" alt="" />
														<% } %>
													</a>
												</center>
												<header>
													<center><h2><%= agency.name %></h2></center>
												</header>

												<div id = "divfull_<%= agency.id%>" style="display:none">
													<%= agency.description %>
												</div>

												<div id = "services">

													<% if ( agency.services.length > 0 ) { %>
													<ul>
														<% agency.services.forEach( function(service) { %>
															<li><%= service.name %></li>
														<% }); %>
													</ul>
													<% }; %>
												</div>
												<footer>
													<a href="<%=agency.url%>" class="button alt">Visit our website</a>
												</footer>
											</section>
										</div>
										<% } %>

									</div>
									<% } %>
								</section>
								<% } %>
						</div>
					</div>
				</div>
			</div>

		<!-- Footer -->
			<div id="footer-wrapper">
				<section id="footer" class="container">
					<div class="row">
						<div class="8u">
							<section>
								<header>
									<h2>News</h2>
								</header>
								<ul class="dates">
									<li>
										<span class="date">Jan <strong>27</strong></span>
										<h3><a href="#">Lorem dolor sit amet veroeros</a></h3>
										<p>Ipsum dolor sit amet veroeros consequat blandit ipsum phasellus lorem consequat etiam.</p>
									</li>
								</ul>
							</section>
						</div>
						<div class="4u">
							<section>
								<header>
									<h2>Contact us!</h2>
								</header>
								<ul class="contact">
									<li>
										<h3>Address</h3>
										<p>Indiana Department of Homeland Security<br />
											Indiana Government Center South<br />
											302 W. Washington St., Room E208<br />
											Indianapolis, Indiana 46204
										</p>
									</li>
								</ul>
							</section>
						</div>
					</div>
					<div class="row">
						<div class="12u">

							<!-- Copyright -->
								<div id="copyright">
									<ul class="links">
										<li>&copy; Untitled. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
									</ul>
								</div>
						</div>
					</div>
				</section>
			</div>
			<script>
				function btnShortDescription(agencyID) {
					//console.log(agencyName);
					$("#divshort_"+agencyID).toggle();
					$("#divfull_"+agencyID).toggle();
				}
				function btnFullDescription(agencyID) {
					//console.log(agencyName);
					$("#divshort_"+agencyID).toggle();
					$("#divfull_"+agencyID).toggle();
				}
			</script>
	</body>
</html>
